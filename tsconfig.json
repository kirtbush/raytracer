{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false, //TODO READD THIS and fix
        "skipLibCheck": true,
        //"forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "strict": true,
        "noUnusedLocals": true,        
        //"outDir": "typeScript",
        "typeRoots": [ "./node_modules/@types" ],
    },
    "include": [
        "./apptest.ts",
        "./features/step_definitions/stepdefs.ts",
        "./features/support/parameter_types.ts"
    ],
    "exclude": [
        "node_modules",
        "typescript"
    ]
}